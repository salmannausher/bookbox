<div class="container">
      <div class="card card-container">
            <form class="form-signin">

            <span id="reauth-email" class="reauth-email"></span>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
              <%= f.label :Email%>
                
                <%= f.email_field :email, required: false, autofocus: true,  class: "form-control" %>
                </div>

                <div class="form-group">
                <%= f.label :Password%>
                <%= f.password_field :password, required: false, class: "form-control" %>
                </div>

                <div class="form-group">
                <%= f.label :remember_me%>
                <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-group">
                <%= f.button :submit, "Log in",class:"btn btn-lg btn-primary btn-block btn-signin" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
            </form>

      </div>
</div>